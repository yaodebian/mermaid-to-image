{
  "manifest_version": 3,
  "name": "Mermaid to Image",
  "version": "1.0.0",
  "description": "从网页提取Mermaid图表并下载为图片",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "sandbox": {
    "pages": ["mermaid-renderer.html"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["mermaid-renderer.html", "mermaid-script.js", "mermaid.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 